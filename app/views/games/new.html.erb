<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
<br />
<br />

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %> <%=
  hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="type your longest word..." />
  <input type="submit" />
</form>

